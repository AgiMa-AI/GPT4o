# Agi-Ma + Mattermost 集成项目环境配置

# 运行模式 (all | frontend | mattermost-frontend | mattermost-backend)
MODE=all

# 服务器配置
PORT=3000
BACKEND_PORT=8065
API_PATH=/api
NODE_ENV=development

# Mattermost API配置
MATTERMOST_API_URL=http://localhost:8065/api/v4
MATTERMOST_WEBSOCKET_URL=ws://localhost:8065/api/v4/websocket

# 认证与安全配置
JWT_SECRET=your_jwt_secret_replace_in_production
CORS_ORIGIN=*
DISABLE_TELEMETRY=true
DISABLE_MONITORING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# 数据库配置
DB_TYPE=sqlite
DB_PATH=./data/mattermost.db

# 移动端优化配置
MOBILE_CACHE_SIZE=50
MOBILE_OFFLINE_SUPPORT=true
MOBILE_PREFETCH_ENABLED=true
MOBILE_BATTERY_SAVER=true

# PM模块配置
PM_MODULE_ENABLED=false
PM_MODULE_PATH=./modules/pm

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 静态资源配置
PUBLIC_URL=/
ASSETS_PATH=/assets

# 功能开关
FEATURE_OFFLINE_MODE=true
FEATURE_DARK_MODE=true
FEATURE_NOTIFICATIONS=true